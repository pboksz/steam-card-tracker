%html
  %head
    %title Steam Card Tracker
    %meta{ name: :description, content: 'Track the historical prices of Steam trading cards.' }
    %meta{ name: :keywords, content: 'steam, steam market, trading, card, trading card, foil, booster, graph, trend, history, price, lowest price, current price' }
    %meta{ name: :viewport, content: 'width=device-width, initial-scale=1' }
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{ 'ng-app' => 'cardtracker' }
    = yield
