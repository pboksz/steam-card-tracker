.game-title
  %span.collapse.toggle-game
    %span.name {{game.name}} ({{game.price_per_badge | currency}}/badge)
    %span.icon
      = icon('angle-down')
      = icon('angle-up', '', style: 'display: none')
  %span.reload-game= icon('refresh')
  %span.updated-today{ 'ng-show' => 'game.updated_today' }= icon('download')
  %span.time-to-load

.game-cards{ style: 'display:none' }
  .game-items
    .game-item{ 'ng-repeat' => 'item in game.items' }
      = render 'item'
  .game-chart
