.steam-card-tracker
  %h2 Steam Card Tracker
  = form_tag root_path, :method => :get do
    .games-select= select_tag 'games', options_for_select(@games, params[:games]), :multiple => true
    .regular-cards
      = label_tag 'type', 'Regular Cards?'
      = radio_button_tag 'type', 'regular', true
    .foil-cards
      = label_tag 'type', 'Foil Cards?'
      = radio_button_tag 'type', 'foil', params[:type] == 'foil'
    .booster-packs
      = label_tag 'booster', 'Booster Packs?'
      = radio_button_tag 'type', 'booster', params[:type] == 'booster'
    .submit= submit_tag 'Select Games'

  - @game_items.each do |game_name, items|
    %h3= game_name
    - if params[:type] == 'foil'
      - items.select { |item| item.foil? }.each do |item|
        = render 'item', :item => item
    - else
      - items.select { |item| !item.foil? }.each do |item|
        = render 'item', :item => item
