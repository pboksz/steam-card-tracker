#steam-card-tracker{ 'ng-controller' => 'GamesController' }
  .app-title Steam Card Tracker

  .games{ 'ng-repeat' => 'game in games' }
    .game{ :id => 'game{{game.id}}' }
      .game-title{ 'ng-click' => 'showGame($event)' }
        {{game.name}}
        %i.icon-spinner.icon-spin.icon-large

      .loaded
        .game-items
          .game-item{ 'ng-repeat' => 'item in game.items' }
            %a{ 'ng-href' => '{{item.link_url}}', :target => '_blank' }
              %img.left{ 'ng-src' => '{{item.image_url}}' }
              .right
                .prices
                  .low {{item.all_time_low_price}}
                  .current {{item.currency_symbol}}{{item.current_price}}
                  .high {{item.all_time_high_price}}
                .other
                  .name {{item.short_name}}
                  .quantity Quantity: {{item.current_quantity}}
        .game-chart{ :id => 'chart{{game.id}}' }
