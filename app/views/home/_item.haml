%a{ 'ng-href' => '{{item.link_url}}', :target => '_blank' }
  %img.left{ 'ng-src' => '{{item.image_url}}' }
  .right
    .name {{item.short_name}} X {{item.current_quantity}}
    .prices
      .low.success {{item.all_time_low_price | number: 2 }}
      .current.info {{item.currency_symbol}}{{item.current_price | number: 2}}
      .high.warning {{item.all_time_high_price | number: 2}}
